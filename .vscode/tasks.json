{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Version ‚¨ÜÔ∏è",
            "type": "shell",
            "command": "sh",
            "args": [
                "./src/scripts/update-version.sh"
            ],
            "presentation": {
                "reveal": "always",
                "panel": "shared",
                "clear": true
            }
        },
        {
            "label": "NuGet ‚¨ÜÔ∏è",
            "type": "shell",
            "command": "sh",
            "args": [
                "-c",
                "if ! dotnet tool list -g | grep -q 'dotnet-outdated-tool'; then dotnet tool install --global dotnet-outdated-tool; fi && cd ${workspaceFolder}/src && dotnet outdated Askyl.Dsm.WebHosting.sln -u"
            ],
            "presentation": {
                "reveal": "always",
                "panel": "shared",
                "clear": true
            },
        },
        {
            "label": "üßπ‚ú®",
            "type": "shell",
            "command": "dotnet",
            "args": [
                "clean",
                "Askyl.Dsm.WebHosting.sln",
            ],
            "options": {
                "cwd": "${workspaceFolder}/src"
            },
            "presentation": {
                "reveal": "always",
                "panel": "shared",
                "clear": true
            }
        },
        {
            "label": "üîß SLN",
            "type": "shell",
            "command": "sh",
            "args": [
                "-c",
                "dotnet msbuild Askyl.Dsm.WebHosting.sln -t:Clean && dotnet msbuild Askyl.Dsm.WebHosting.sln -t:Restore && dotnet msbuild Askyl.Dsm.WebHosting.sln -t:Build",
            ],
            "options": {
                "cwd": "${workspaceFolder}/src"
            },
            "presentation": {
                "reveal": "always",
                "panel": "shared",
                "clear": true
            }
        },
        {
            "label": "üîß SPK",
            "type": "shell",
            "command": "sh",
            "args": [
                "./src/scripts/build-spk.sh"
            ],
            "presentation": {
                "reveal": "always",
                "panel": "shared",
                "clear": true
            }
        }
    ]
}