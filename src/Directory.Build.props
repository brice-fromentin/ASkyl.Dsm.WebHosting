<?xml version="1.0" encoding="utf-8"?>
<Project>
  <PropertyGroup>
    <!-- Disable PDB generation for all projects when publishing -->
    <DebugType Condition="'$(Configuration)' == 'Release'">None</DebugType>
    <DebugSymbols Condition="'$(Configuration)' == 'Release'">false</DebugSymbols>
    <GenerateDocumentationFile>false</GenerateDocumentationFile>
  </PropertyGroup>
  <PropertyGroup>
    <!-- Centralized versioning -->
  <Version>0.1.12</Version>
  <AssemblyVersion>0.1.12.0</AssemblyVersion>
  <FileVersion>0.1.12.0</FileVersion>
    <InformationalVersion>0.1.12</InformationalVersion>
  <PackageVersion>0.1.12</PackageVersion>
  </PropertyGroup>
</Project>
